{
    "manifest_version": 3,
    "name": "Save All Tab URLs",
    "version": "1.0",
    "description": "Save all tab URLs and let you copy them or save as an HTML file with the title and icon.",
    "permissions": [
      "tabs",
      "clipboardWrite"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Save Tab URLs"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  